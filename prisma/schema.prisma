generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Task {
  id   String  @id @default(cuid())
  task String
  done Boolean
}

model DatedTask {
  id        String   @id @default(cuid())
  title     String
  date      DateTime
  done      Boolean  @default(false)
  createdAt DateTime @default(now())
}
